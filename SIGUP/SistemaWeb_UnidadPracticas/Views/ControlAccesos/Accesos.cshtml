
@{
    ViewBag.Title = "Accesos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Accesos</h2>

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="#">Administrador</a></li>
    <li class="breadcrumb-item active">Accesos</li>
</ol>
<div class="card">
    <div class="card-header">

        <i class="fas fa-landmark me-1"></i>Lista de Accesos
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12  d-flex justify-content-between align-items-center">
                <button type="button" class="btn btn-success" onclick="abrirModal()">Registrar</button>

                <form action="@Url.Action("DescargarPDF_Prestamos","SIGUP")" class="mt-0 ml-2">
                    <button class="btn btn-danger" type="submit"><i class="fas fa-file-pdf"></i> Descargar PDF</button>
                </form>
            </div>
        </div>
        <hr /> @*el id es para identificar la tabla*@
        <table id="tabla" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>#ID</th>
                    <th>Fecha</th>
                    <th>Usuario</th>
                    <th>Hora de Entrada</th>
                    <th>Hora de Salida</th>
                    <th>Tipo de Actividad</th>
                    <th>Alumnos</th>
                    <th>Semestre</th>
                    <th>Carrera</th>
                    <th>Area</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @*Aqui va el render de ajax*@
            </tbody>
        </table>

    </div>
</div>

<!-- Modal, con el id FormModal vamos a llamarlo cuando deseamos que aparezca y cuando no
    al momento de precionar el boton nuevo-->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    @*Esto ultimo de data-bs-backdrop es para*@
    <div class="modal-dialog">
        @*no poder quitar es modal a menos que demos clic en cerrar o en la x, si hacemos clic en otro lado no se puede quitar*@
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="exampleModalLabel">Accesos</h5>
                <button type="button" class="btn-close bg-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="contenedor">

                <input id="txtId" type="hidden" value="0" />@*Con el valor 0 se identifica si es un Prestamo nuevo a ingresar o es valor ya existe
                    pero si es diferente a 0 significa que ya existe y vamos a editar*@
            <div class="row g-2">
                <div class="col-sm-6">
                    <label class="form-label">Fecha</label>
                    <input type="date" class="form-control" id="txtFechaCU" autocomplete="off">
                </div>
                <div class="col-sm-6">
                    <label class="form-label">Usuario</label>
                    <select id="cmbUsuario" class="form-select">
                    </select>
                </div>
                <div class="col-sm-6">
                    <label class="form-label">Hora de Entrada</label>
                    <input type="time" class="form-control" id="txtEntrada" autocomplete="off">
                </div>
                <div class="col-sm-6">
                    <label class="form-label">Hora de Salida</label>
                    <input type="time" class="form-control" id="txtSalida" autocomplete="off">
                </div>
                <div class="col-sm-6">
                    <label class="form-label">Tipo de Actividad</label>
                    <select id="cmbActividad" class="form-select">
                    </select>
                </div>
                <div class="col-sm-6">
                    <label class="form-label">Alumnos</label>
                    <input type="number" class="form-control" id="txtCantidadCU" autocomplete="off">
                </div>
                <div class="col-sm-2">
                    <label class="form-label">Semestre</label>
                    <input type="number" class="form-control" id="txtSemestreCU" autocomplete="off" min="1" max="12">
                </div>
                <div class="col-sm-10">
                    <label class="form-label">Area</label>
                    <select id="cmbArea" class="form-select">
                    </select>
                </div>
                <div class="col-sm-12">
                    <label class="form-label">Carrera</label>
                    <select id="cmbCarrera" class="form-select">
                    </select>
                </div>
            </div>
                <!--mensaje de alerta-->
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            <label class="form-label" id="lblAlerta"></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer" id="footer-modal">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarRCU()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        //Variables Globales
        var tabladata;
        var filaSeleccionada;
        var fechaActual = new Date().toISOString().slice(0, 10);
        var horaActual = new Date().toLocaleTimeString('es-MX', { hour12: false, hour: '2-digit', minute: '2-digit' });

        //----------------------------------------TABLA-------------------------------------------------
        //Aqui se encuentra el cuerpo de la tabla
        tabladata = $("#tabla").DataTable({
            responsive: true,
            ordering: true,
            "ajax": {
                url: '@Url.Action("ListarAccesosCompleto", "ControlAccesos")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "IdRegistro" },
                { "data": "fecha" },
                {
                    "data": "E_IdUsuario", "render": function (data) {
                        return data.NombreCompletoUsuario
                    }
                },
                { "data": "HoraEntrada" },
                {
                    "data": "HoraSalida", "render": function (data) {
                        if (data == "") {/*Si el valor es verdadero*/
                            return '<span class="badge bg-warning text-dark">En clase</span>';
                        } else {
                            return data;
                        }
                    }
                },
                {
                    "data": "E_TipoActividad", "render": function (data) {
                        return data.NombreActividad
                    }
                },
                { "data": "CantidadAlumnos" },
                { "data": "Semestre" },
                {
                    "data": "E_IdCarrera", "render": function (data) {
                        return data.nombreCarrera
                    }
                },
                {
                    "data": "E_IdArea", "render": function (data) {
                        return data.nombreArea
                    }
                },
                {
                    "data": "IdRegistro", "render": function (data, type, row, meta) {

                        return $("<button>").addClass("btn btn-warning btn-actualizar btn-sm").append(
                            $("<i>").addClass("fas fa-sync")
                        ).attr({ "data-informacionRegistro": JSON.stringify(row) })[0].outerHTML;
                    },
                    "orderable": false,
                    "searchable": false
                },
                {
                    "data": "IdRegistro", "render": function (data, type, row, meta) {

                        return $("<button>").addClass("btn btn-primary btn-editar btn-sm").append(
                            $("<i>").addClass("fas fa-pen")
                        ).attr({ "data-informacion": JSON.stringify(row) })[0].outerHTML
                            +
                            $("<button>").addClass("btn btn-danger btn-eliminar btn-sm ms-2").append(
                                $("<i>").addClass("fas fa-trash")
                            ).attr({ "data-informacion": JSON.stringify(row) })[0].outerHTML;
                    },
                    "orderable": false,
                    "searchable": false,
                    "width": "90px"
                }
            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json"
            }

        });

        //----------------------------------------ComboBox-------------------------------------------------
        jQuery.ajax({
            url: '@Url.Action("ListarCarrerasCU","ControlAccesos")',
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $("#cmbCarrera").append($("<option selected>").val("").attr({ "value": "0", "disabled": "true" }).text("Seleccionar"));
                $.each(data.data, function (index, item) {
                    $("<option>").attr({ "value": item.idCarrera }).text(item.nombreCarrera).appendTo("#cmbCarrera");
                })
            }
        });

        jQuery.ajax({
            url: '@Url.Action("ListarActividadCU", "ControlAccesos")',
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $("#cmbActividad").append($("<option selected>").val("").attr({ "value": "0", "disabled": "true" }).text("Seleccionar"));
                $.each(data.data, function (index, item) {
                    $("<option>").attr({ "value": item.IdActividad }).text(item.NombreActividad).appendTo("#cmbActividad");
                })
            }
        });

          jQuery.ajax({
            url: '@Url.Action("ListarUsuarioCU", "ControlAccesos")',
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $("#cmbUsuario").append($("<option selected>").val("").attr({ "value": "0", "disabled": "true" }).text("Seleccionar"));
                $.each(data.data, function (index, item) {
                    $("<option>").attr({ "value": item.idUsuario }).text(item.NombreCompletoUsuario).appendTo("#cmbUsuario");
                })
            },
            error: function (error) {
                console.log(error)
              }
          });

           jQuery.ajax({
            url: '@Url.Action("ListarAreaParaCU", "ControlAccesos")',
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $("#cmbArea").append($("<option selected>").val("").attr({ "value": 0, "disabled": "true" }).text("Seleccionar"));
                $.each(data.data, function (index, item) {
                    $("<option>").attr({ "value": item.idArea }).text(item.nombreArea).appendTo("#cmbArea");
                })

            },
            error: function (error) {
                console.log(error)
              }
          });

        function abrirModal(json) /*json es el data del siguiente*/ {

            /*Asignacion de valores al abrir el modal*/
            $("#txtId").val(0);
            $("#txtFechaCU").val(fechaActual);
            $("#cmbUsuario").val("");
            $("#txtEntrada").val(horaActual);
            $("#txtSalida").val("");
            $("#cmbActividad").val("");
            $("#txtCantidadCU").val(1);
            $("#txtSemestreCU").val(1);
            $("#cmbCarrera").val("");
            $("#txtAreaDeUso").val("");

            $("#mensajeError").hide();
            //La siguiente validacion es por que el modal sirve para guardar y editar, entonces al abrir trae la informacion dependiendo del boton.
            if (json != null) {
                $("#txtId").val(json.IdRegistro);
                $("#txtFechaCU").text(json.fecha);
                $("#cmbUsuario").val(json.E_IdUsuario.idUsuario);
                $("#txtEntrada").val(json.HoraEntrada);
                $("#txtSalida").val(json.HoraSalida);
                $("#cmbActividad").val(json.E_TipoActividad.IdActividad);
                $("#txtCantidadCU").val(json.CantidadAlumnos);
                $("#txtSemestreCU").val(json.Semestre);
                $("#cmbCarrera").val(json.E_IdCarrera.idCarrera);
                $("#cmbArea").val(json.E_IdArea.idArea);
            }

            $("#FormModal").modal("show");
        }

        /*--------------- Al dar clic en el boton de editar-------------------------------*/

        $("#tabla tbody").on("click", '.btn-editar', function () {
            filaSeleccionada = $(this).closest("tr");
            var data = tabladata.row(filaSeleccionada).data();
            var json = $(this).data("informacion")
            abrirModal(json)

        })

        /*--------------- Al dar clic en el boton de editar solo fecha prestamo y activo-------------------------------*/

        $("#tabla tbody").on("click", '.btn-eliminar', function () {
            var json = $(this).data("informacion")
            swal({
                title: "¿Esta Seguro?",
                text: "¿Desea eliminar el Registro?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "Si",
                cancelButtonText: "No",
                closeOnConfirm: true
            },
            function () {
                jQuery.ajax({
                    url: '@Url.Action("EliminarrCU", "ControlAccesos")',
                    type: "POST",
                    data: JSON.stringify({ id: json.IdRegistro }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.resultado) {
                            tabladata.ajax.reload();
                        }else {
                            swal("No se pudo eliminar", data.mensaje, "error")
                        }
                    },
                    error: function (error) {
                        console.log(error)
                    }

                });
            });
        })

        function GuardarRCU() {

            var Prestamo = {
                IdRegistro: $("#txtId").val(),
                fecha: $("#txtFechaCU").val(),
                E_IdUsuario: {
                    idUsuario: $("#cmbUsuario option:selected").val(),
                    NombreCompletoUsuario: $("#cmbUsuario option:selected").text()
                },
                HoraEntrada: $("#txtEntrada").val(),
                HoraSalida: $("#txtSalida").val(),
                E_TipoActividad: {
                    IdActividad: $("#cmbActividad option:selected").val(),
                    NombreActividad: $("#cmbActividad option:selected").text()
                },
                CantidadAlumnos: $("#txtCantidadCU").val(),
                Semestre: $("#txtSemestreCU").val(),
                E_IdCarrera: {
                    idCarrera: $("#cmbCarrera option:selected").val(),
                    nombreCarrera: $("#cmbCarrera option:selected").text()
                },
                E_IdArea: {
                    idArea: $("#cmbArea option:selected").val(),
                    nombreArea: $("#cmbArea option:selected").text()
                },
            }
            console.log(Prestamo);
                jQuery.ajax({
                url: '@Url.Action("GuardarRCU", "ControlAccesos")',
                    type: "POST",
                    data: JSON.stringify({ accesos: Prestamo }), // el accesos es el parametro del metodo del controlador, el otro es la variable
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $(".modal-body").LoadingOverlay("hide");
                    //CATEGORIA NUEVO
                    if (Prestamo.IdRegistro == "0") {
                        if (data.resultado != 0) {
                            Prestamo.IdRegistro = data.resultado;
                            tabladata.row.add(Prestamo).draw(false);
                            $("#FormModal").modal("hide");
                            tabladata.ajax.reload();
                        } else {

                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                    //CATEGORIA Editar
                    else {
                        if (data.resultado) {
                            tabladata.ajax.reload();
                            filaSeleccionada = null;
                            $("#FormModal").modal("hide");

                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                },
                error: function (error) {
                    $(".modal-body").LoadingOverlay("hide");
                    $("#mensajeError").text("Error Ajax");
                    $("#mensajeError").show();
                },
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 24
                    });
                }
            });

        }
    </script>
}