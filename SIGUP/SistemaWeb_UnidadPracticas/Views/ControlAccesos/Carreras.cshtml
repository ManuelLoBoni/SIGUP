        })

        //BTN Editar
        $("#tablaCarreras tbody").on("click", '.btn-editar', function () {
            filaSeleccionada = $(this).closest("tr");
            var data = tablaCarreras.row(filaSeleccionada).data();

            var json = $(this).data("informacion")
            abrirModal(json)

        })
        //------------------------------------------MODAL-----------------------------------------------
        function abrirModal(json) {

            /*Asignacion de valores al abrir el modal*/
            $("#txtId").val(0);
            $("#txtNombreCarrera").val("");

            $("#mensajeError").hide();

            if (json != null) {
                $("#txtId").val(json.idCarrera);
                $("#txtDescripcion").val(json.nombreCarrera);

            }

            $("#FormModal").modal("show");
        }



            function GuardarCarreraCU() {
                var Carrera = {
                    idCarrera: $("#txtId").val(),
                    nombreCarrera: $("#txtNombreCarrera").val(),
                }
            jQuery.ajax({
                url: '@Url.Action("GuardarCarreraCU", "ControlAccesos")',
                type: "POST",
                data: JSON.stringify({ carrera: Carrera }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $(".modal-body").LoadingOverlay("hide");
                    //CATEGORIA NUEVO
                    if (Carrera.idCarrera == "0") {
                        if (data.resultado != 0) {
                            Carrera.idCarrera = data.resultado;
                            tablaCarreras.row.add(Carrera).draw(false);
                            $("#FormModal").modal("hide");
                            tablaCarreras.ajax.reload();
                        } else {

                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                    //CATEGORIA Editar
                    else {
                        if (data.resultado) {
                            tablaCarreras.ajax.reload();
                            filaSeleccionada = null;
                            $("#FormModal").modal("hide");

                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                },
                error: function (error) {
                    $(".modal-body").LoadingOverlay("hide");
                    $("#mensajeError").text("Error Ajax");
                    $("#mensajeError").show();
                },
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 24
                    });
                }
            });

        }

</script>
