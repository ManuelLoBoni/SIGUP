        //BTN Eliminar
        $("#tablaCarreras tbody").on("click", '.btn-eliminar', function () {
            var json = $(this).data("informacion")
                swal({
                    title: "¿Esta Seguro?",
                    text: "¿Desea eliminar la carrera?",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonClass: "btn-primary",
                    confirmButtonText: "Si",
                    cancelButtonText: "No",
                    closeOnConfirm: false
                },
                function () {
                    jQuery.ajax({
                        url: '@Url.Action("EliminarCarreraCU", "ControlAccesos")',
