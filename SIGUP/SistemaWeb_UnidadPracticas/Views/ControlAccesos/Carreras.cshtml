    <li class="breadcrumb-item active">Carreras</li>
</ol>
<nav class="sticky-top bg-light">
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link active" id="nav-carreras-tab" data-bs-toggle="tab" data-bs-target="#nav-carreras" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Carreras</button>
